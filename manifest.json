{
  "manifest_version": 3,
  "name": "Social Sidebar",
  "version": "1.0",
  "description": "Acceso r√°pido a WhatsApp y Discord",
  "permissions": [
    "storage",
    "webview",
    "activeTab",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://*.whatsapp.com/*",
    "https://*.discord.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  }
}