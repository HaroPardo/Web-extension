{
  "manifest_version": 3,
  "name": "Social Sidebar",
  "version": "1.0",
  "description": "Acceso r√°pido a WhatsApp y Discord",
  "permissions": [
    "webview",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://discord.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "sandbox": {
    "pages": ["panel.html"]
  },
 "web_accessible_resources": [
    {
      "resources": ["bridge.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  }
}