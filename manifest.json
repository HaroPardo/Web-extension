{
  "manifest_version": 3,
  "name": "Social Sidebar",
  "version": "1.0",
  "description": "Acceso r√°pido a WhatsApp y Discord",
  "permissions": [
    "webview",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://discord.com/*"
  ],
  "action": {
    "default_popup": "popup.html",  // IMPORTANTE: Esto debe existir
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "sandbox": {
    "pages": ["panel.html"]
  }
}