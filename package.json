{
  "name": "social-sidebar-electron",
  "version": "1.0.0",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "build": {
    "appId": "com.tuempresa.social-sidebar",
    "productName": "Social Sidebar",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "extraResources": [
      "panel.html",
      "popup.html",
      "preload.cjs",
      "styles/**",
      "scripts/**",
      "node_modules/**"
    ],
    "asar": false
  }
}
